<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listDaysItemLayout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:weightSum="6"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/itemDayTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="@dimen/sizeTextItem"
        tools:text="@string/itemTextInRV" />

    <TextView
        android:id="@+id/itemTempDayTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/sizeTextItem"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="@string/itemTextInRV" />

    <ImageView
        android:id="@+id/typeDayImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/itemTempNightTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"

        android:textSize="@dimen/sizeTextItem"
        tools:text="@string/itemTextInRV" />

    <ImageView
        android:id="@+id/typeNightImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:contentDescription="@string/todo" />

</LinearLayout>