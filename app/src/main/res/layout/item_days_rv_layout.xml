<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listDaysItemLayout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:weightSum="5"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/itemDayTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        style="@style/GravityWithTextSize"
        tools:text="@string/itemTextInRV" />

    <TextView
        android:id="@+id/itemTempDayTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/GravityWithLargeTextSize"
        android:textStyle="bold"
        android:layout_weight="1"
        tools:text="@string/itemTextInRV" />

    <TextView
        android:id="@+id/itemTempNightTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="@style/GravityWithSmallTextSize"
        tools:text="@string/itemTextInRV" />

    <ImageView
        android:id="@+id/typeDayImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:contentDescription="@string/todo" />

</LinearLayout>